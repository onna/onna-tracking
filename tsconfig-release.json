{
    "compilerOptions": {
        "baseUrl": "",
        "target": "es5",
        "module": "es2015",
        "moduleResolution": "node",
        "declaration": true,
        "allowUnusedLabels": false,
        "noImplicitAny": false,
        "noImplicitReturns": false,
        "strictNullChecks": false,
        "sourceMap": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "outDir": "./dist",
        "rootDir": "./src/lib",
        "skipLibCheck": true,
        "stripInternal": true,

        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es2017",
            "dom"
        ]
    },
    "compileOnSave": false,
    "buildOnSave": false,
    "include": [
        "src/lib"
    ],
    "exclude": [
        "node_modules",
        "node_modules/**/*",
        "dist/**/*",
        "e2e/**/*"
    ],
    "angularCompilerOptions": {
        "genDir": "dist",
        "skipTemplateCodegen": true,
        "strictMetadataEmit": true
    }
}
